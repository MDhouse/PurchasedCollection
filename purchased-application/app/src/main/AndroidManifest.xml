<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="purchases.application.purchasescollection">

    <uses-permission android:name="application.purchases.purchasedbroadcast.HANDLE_INTENT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_line_style"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Mint">
        <activity
            android:name=".products.ProductsActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="purchases.application.purchasescollection.PRODUCT_LIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".addEditProduct.AddEditProductActivity" />
        <activity
            android:name=".productDetail.ProductDetailActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".products.ProductsActivity">
            <intent-filter>
                <action android:name="purchases.application.purchasescollection.PRODUCT_DETAIL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".setting.SettingActivity" />
    </application>

</manifest>